create database timefutebol;
USE timefutebol;



CREATE TABLE jogadores (
id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(30),
posição VARCHAR(20),
altura VARCHAR(20),
ultimotime VARCHAR(20)
);

CREATE TABLE comissaotecnica  (
id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(20),
funcao VARCHAR(30)
);

CREATE TABLE fucionarios (
id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(20),
funcao VARCHAR(20)
);

DROP TABLE  fucionarios;     

